{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist/esm"
  },
  "include": [
    "./src",
    "./src/types",
    "./lib"
  ],
  "exclude": ["./node_modules", "./dist"]
}
