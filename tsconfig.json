{
  "compilerOptions": {
    "strict": true,
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": false,
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "dist"
  },
  "include": [
    "src",
    "lib"
  ],
  "exclude": ["node_modules", "dist"]
}
